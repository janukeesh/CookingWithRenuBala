    style.
      * {
      box-sizing: border-box;
      }
      body{
      margin:0px;
      }
      .header{
      color: #3333cc;
      font-family: 'Courgette';
      text-shadow:3px 3px  #4d4d4d;
      padding:10px;
      margin:0px;
      }
      ul{
      background-color:#000000;
      overflow:hidden;
      list-style-type:none;
      height:40px;
      margin:0;
      }
      li.shop{
      float:right;
      }
      li{
      float:left;
      }
      li a,span {
      display:block;
      margin:0;
      padding:10px;
      color:white;
      text-decoration:none;
      }
      li a:hover,li span:hover{
      background-color:#9966ff;
      color:#000000;
      }
      .cusins_list,.ingredient_list {
      display:none;
      position:absolute;
      border-bottom:2px solid black;
      color:white;
      background-color:black;
      z-index:1;
      }
      .ingredient_list {
      display:none;
      position:absolute;
      width:100px;
      border-bottom:2px solid black;
      color:white;
      background-color:black;
      }
      .cusin:hover .cusins_list,.ingredient:hover .ingredient_list{
      display:block;
      }
      .cusins_list a,.ingredient_list a{
      display:block;
      text-decoration:none;
      border-bottom:2px solid white;
      }
      .content{
      display:flex;
      flex-wrap:wrap;
      }
      .side{
      flex:15%;
      padding:10px;
      }
      .main{
      flex:70%;
      height:1000px;
      padding:10px;
      }
      iframe{
      width:70%;
      height:400px;
      margin:10% 15% 0 15%;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0,.19);
      border-radius:20px;
      }
      .heading{
      font-size:35px;
      font-style:italic;
      font-weight:bold;
      margin:2% 15%;
      position:relative;
      }
      .button {
      background-color: blue;
      border: none;
      color: white;
      padding: 10px 10px;
      position:absolute;
      top:0%;
      right:0px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      cursor: pointer;
      }
      .steps{
      margin:0 15% 0 15%;
      background-color:#80ffaa;
      display:none;
      }
      .side_2{
      flex:15%;
      padding:10px;
      }
      .footer{
      background-color:rgba(0,0,0,1);
      padding:30px;
      color:white;
      font-size:15px;
      }
      @media screen and (max-width: 500px) {
      .main{
      height:700px;
      }
      }
