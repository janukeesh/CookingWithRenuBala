    style.
      * {
      box-sizing: border-box;
      }
      body{
      margin:0px;
      }
      .header{
      color: #3333cc;
      font-family: 'Courgette';
      text-shadow:3px 3px  #4d4d4d;
      padding:10px;
      margin:0px;
      }
      ul{
      background-color:#000000;
      list-style-type:none;
      height:45px;
      margin:0;
      }
      li.shop{
      float:right;
      }
      li{
      float:left;
      }
      li a,span {
      display:inline-block;
      padding:12px;
      text-align:center;
      color:white;
      font-size:18px;
      text-decoration:none;
      transition: all 0.3s ease;
      }
      li a:hover,li span:hover{
      background-color:#9966ff;
      color:#000000;
      }
      .cusins_list,.ingredient_list {
      display:none;
      position:absolute;
      border-bottom:2px solid black;
      color:white;
      background-color:black;
      z-index:1;
      }
      .cusin:hover .cusins_list,.ingredient:hover .ingredient_list{
      display:block;
      }
      .cusins_list a,.ingredient_list a{
      display:block;
      text-decoration:none;
      border-bottom:2px solid white;
      }
      .content{
      display:flex;
      flex-wrap:wrap;
      }
      .side{
      flex:15%;
      padding:10px;
      }
      .main{
      flex:70%;
      display:flex;
      flex-wrap:wrap;
      flex-direction:column;
      height:1200px;
      padding:10px;
      }
      .drinks{
      width:100%;
      margin:2px;
      height:20%;
      border-radius:10px;
      background-color:#ffcce6;
      display:flex;
      flex-wrap:wrap;
      flex-direction:row;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0,.19);
      position:relative;
      }
      .gallery{
      flex-grow:1;
      width:25%;
      margin:2px;
      }
      .gallery img{
      margin:5% 3% 0 2%;
      border:1px solid #999999;
      border-radius:10px;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0,.19);
      }
      div.text{
      font-size:96%;
      padding-top:10px;
      text-align:center;
      font-family: 'Lemon';
      max-width:100%;
      word-wrap: break-word;
      }
      .prev, .next {
      cursor: pointer;
      position: absolute;
      top: 50%;
      width: auto;
      padding: 16px;
      margin-top: -22px;
      color:white;
      font-weight: bold;
      font-size: 20px;
      transition: 0.6s ease;
      border-radius: 8px 8px 8px 8px;
      user-select: none;
      }
      .next {
      right:0;
      }
      .prev:hover, .next:hover {
      background-color: rgba(0,0,0,0.8);
      }
      .festive{
      width:100%;
      margin:2px;
      height:20%;
      border-radius:10px;
      display:flex;
      flex-direction:row;
      background-color: #ffff80;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0,.19);
      position:relative;
      }
      .most_popular{
      width:100%;
      margin:2px;
      height:20%;
      border-radius:10px;
      display:flex;
      flex-direction:row;
      background-color: #d9b38c;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0,.19);
      position:relative;
      }
      .side_2{
      flex:15%;
      padding:10px;
      }
      .footer{
      background-color:rgba(0,0,0,1);
      padding:30px;
      color:white;
      font-size:15px;
      }
      @media screen and (max-width: 500px) {
      .main{
      height:3000px;
      }
      .drinks,.festive,.most_popular{
      flex-direction:column;
      height:25%;
      }
      .gallery{
      width:100%;
      }
      .gallery img{
      margin:5px 5px 5px 5px;
      }
      }
