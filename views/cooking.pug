    script.
      var slideIndex = 1;
      var slideIndex_popular = 1;
      showSlides(slideIndex);
      showSlides_popular(slideIndex);
      function plusSlides_popular(n) {
      showSlides_popular(slideIndex += n);
      }
      function plusSlides(n) {
      showSlides(slideIndex += n);
      }
      function showSlides(n) {
      var i,j,x,y;
      if(n>=3)
      slideIndex=1;
      if(n<=0)
      slideIndex=2;
      x=document.getElementsByClassName("festive");
      y=x[0].getElementsByClassName("gallery");
      for (i = 0; i < y.length; i++) {
      y[i].style.display = "none";
      }
      for (j= slideIndex-1; j< slideIndex+2 ; j++) {
      y[j].style.display = "block";
      }
      }
      function showSlides_popular(n) {
      var i,j,x,y;
      if(n>=3)
      slideIndex=1;
      if(n<=0)
      slideIndex=2;
      x=document.getElementsByClassName("most_popular");
      y=x[0].getElementsByClassName("gallery");
      for (i = 0; i < y.length; i++) {
      y[i].style.display = "none";
      }
      for (j= slideIndex-1; j< slideIndex+2 ; j++) {
      y[j].style.display = "block";
      }
      }
